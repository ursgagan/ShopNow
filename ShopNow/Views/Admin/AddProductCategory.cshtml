@{
    Layout = "_layoutAdmin";
}

@model ShopNow.DAL.Entities.ProductCategory

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1> Product Category</h1>
            <div class="section-header-breadcrumb">
                <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
                <div class="breadcrumb-item"><a href="#">Components</a></div>
                <div class="breadcrumb-item">Table</div>
            </div>
        </div>
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">

                    <div class="card card-primary">
                        <div class="card-header">
                            <h4>
                                <div>
                                    <span> Category</span>
                                </div>
                            </h4>
                        </div>

                        <div class="card-body">

                            <form action="#" id="addProductCategoryForm">
                                <input id="hdnProductCategoryId" class="form-control" name="Id" value="@Model.Id" type="hidden" autofocus>
                                <input type="hidden" id="hdnTempData" value="@TempData["SuccessMessage"]" />
                                <input type="hidden" id="hiddenTempData" value="@TempData["UpdateMessage"]" />
                                <div class="row">
                                    <div class="form-group col-6">
                                        <label for="ProductCategory">Category</label>
                                        <input id="ProductCategory" type="text" class="form-control" name="ProductCategory" value="@Model.CategoryName" autofocus>
                                    </div>

                                    <div class="form-group col-4">
                                        <label for="Image">Choose Image</label>
                                        <input id="CImage" type="file" class="form-control" name="CImage" accept="image/*" multiple>
                                    </div>

                                    <div class="form-group col-8">
                                        <div class="gallery gallery-fw" style="display: flex; flex-wrap: nowrap;" data-item-height="100">
                                         @*    @if (Model.ProductCategoryImage != null)
                                            {
                                                @foreach (var productCategoryImageData in Model.ProductCategoryImage)
                                                {
                                                    <div class="gallery-item-wrapper">
                                                        <a href="#" id="@productCategoryImageData?.Id" class="btn btn-icon btn-danger remove-photo" onclick="showDeleteProductImageModal(this.id)"><i class="fas fa-times"></i></a>

                                                        <img class="gallery-item" id="productImage-@productCategoryImageData?.Id" src="data:image/png;base64,@productImageData?.Image.ImageData" alt="Product Image" style="width: 170px; height: 170px; padding-left:50px;">
                                                    </div>
                                                }
                                            } *@
                                        </div>

                                    </div>


                                </div>

                                <div class="form-group">
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <button type="submit" class="btn btn-primary btn-block" style="width: fit-content;" id="btnSaveCategory">
                                                Submit
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/admintemplate/js/jquery-3.6.4.min.js"></script>
<script src="~/admintemplate/custom/js/addeditproductcategory.js"></script>
